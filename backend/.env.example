# =================================
# CONFIGURACIÓN DEL TERMOSTATO MVP
# =================================

# Configuración de la base de datos MongoDB
# Para desarrollo local usar: mongodb://localhost:27017/thermostat
# Para MongoDB Atlas usar: mongodb+srv://usuario:password@cluster.mongodb.net/thermostat?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/thermostat

# Configuración del servidor
PORT=3001
NODE_ENV=development

# Configuración MQTT
# URL del broker MQTT - usar localhost para desarrollo local
MQTT_BROKER_URL=mqtt://localhost:1883

# ID único del cliente MQTT (opcional - se genera automáticamente si no se especifica)
MQTT_CLIENT_ID=termostato_backend

# Configuración de hardware para Raspberry Pi
# Descomenta y configura estos valores solo si usas hardware real
# SENSOR_GPIO_PIN=4
# RELAY_GPIO_PIN=18

# Configuración de logging
# Niveles: error, warn, info, debug
LOG_LEVEL=info

# Configuración de intervalos (en milisegundos)
# Intervalo de lectura del sensor de temperatura
SENSOR_READ_INTERVAL=5000

# Configuración de seguridad
# Clave secreta para JWT (genera una aleatoria para producción)
# JWT_SECRET=your-super-secret-jwt-key

# Configuración de CORS
# Orígenes permitidos (separados por coma)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =================================
# CONFIGURACIONES ADICIONALES
# =================================

# Configuración de la lógica del termostato
# Temperatura mínima y máxima permitida (en grados Celsius)
MIN_TEMPERATURE=5
MAX_TEMPERATURE=35

# Histéresis del termostato (diferencia de temperatura para activar/desactivar)
TEMPERATURE_HYSTERESIS=0.5

# Configuración de retries para conexiones
# Número de reintentos para conexiones MQTT
MQTT_RECONNECT_ATTEMPTS=5

# Tiempo de espera para reconexión MQTT (en segundos)
MQTT_RECONNECT_DELAY=10

# Configuración de base de datos
# Tiempo de vida de documentos en la base de datos (en días)
DB_DOCUMENT_TTL=30
